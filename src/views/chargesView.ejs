    <div class="page">

      <%- include('partials/headers') %>

      <!-- Statistics Section-->
      <br>
      <!-- Updates Section -->
      <section class="dashboard-header section-padding">
        <div class="container-fluid">
          <div class="row d-flex align-items-md-stretch">
            <div class="col-lg-12">
              <div class="card to-do">
                <strong class="text-primary ml-3">All Charges</strong>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-striped table-bordered nowrap" id="allChargesTable" width="100%" cellspacing="0">
                      <thead>
                        <tr>
                          <th>ID</th>
                          <th>Date</th>
                          <th>Vendor</th>
                          <th>Amount</th>
                          <th>Payment Type</th>
                          <th>Category</th>
                          <th>Comments</th>
                        </tr>
                      </thead>
                      <tbody>
                        <%if (charges.length==0) {%>
                        <tr>
                          <td>None</td>
                          <td>None</td>
                          <td>None</td>
                          <td>None</td>
                          <td>None</td>
                          <td>None</td>
                          <td>None</td>
                        <%} else {%>
                        <%for(let i=0; i<charges.length; i++) {%>
                        <tr>
                          <td><%=charges[i]._id%></td>
                          <td><%=("0" + (charges[i].chargeDate.getMonth()+1)).slice(-2) + '/' + ("0" + charges[i].chargeDate.getDate()).slice(-2) + '/'+ charges[i].chargeDate.getFullYear();%></td>
                          <td><%=charges[i].vendor%></td>
                          <td><%= currencyFormatted(charges[i].amount) %></td>
                          <td><%=charges[i].paymentType%></td>
                          <td><%=charges[i].category%></td>
                          <td><%=charges[i].comments%></td>
                        </tr>
                        <%}}%>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
      <footer class="main-footer">
        <div class="container-fluid">
          <div class="row">
            <div class="col-sm-6">
              <p>Jon Pawlowski &copy; 2019</p>
            </div>
          </div>
        </div>
      </footer>
    </div>
